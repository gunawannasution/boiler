generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  role     Role    @default(USER)

  // Forgot password
  resetToken       String?
  resetTokenExpiry DateTime?

  // Security
  passwordChangedAt DateTime?

  // Metadata
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@index([email]) // Opsional: mempercepat pencarian berdasarkan email
}

enum Role {
  ADMIN
  USER
}
